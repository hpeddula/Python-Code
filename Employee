class Employee():
    def __init__(self,first,last,pay):
        self.first=first
        self.last=last
        self.pay=pay

    def email(self):
        return '{}.{}@company.com'.format(self.first,self.last)

    def full_name(self):
        return '{}{}'.format(self.first,self.last)
    def __repr__(self):
        return 'Employee {} {} {}'.format(self.first,self.last,self.pay)

emp1=Employee('Harsha','Peddula',14810)
print(emp1)
